<h2>List of posts</h2>
<br>
<table class="container">
 <tr class="row">
   <th class="col-md-3">Title</th>
   <th class="col-md-3">User</th>
 </tr>
<tbody>
<% @pictures.each do |picture| %>
 <tr class="row">
   <td class="col-md-3"><%= picture.title %></td>
   <td class="col-md-3"><%= picture.user.name %></td>
   <td><%= link_to 'SHOW', picture_path(picture.id) %></td>

  <% if current_user.id == picture.user.id %>
   <td><%= link_to "EDIT", edit_picture_path(picture.id), data: { confirm: 'Are you sure' } %></td>
   <td><%= link_to 'DELETE', picture_path(picture.id), method: :delete ,data: { confirm: 'Are you sure' } %></td>
  <% end %>
 </tr>
<% end %>
</tbody>
</table>
<br>
<button type="button" class="btn"><%= link_to 'Add new post', new_picture_path %></button>
